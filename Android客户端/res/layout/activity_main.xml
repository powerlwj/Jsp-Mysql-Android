<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/appmess" />
    <!-- 十个按钮及其功能 -->

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:paddingBottom="10dp" >
            
            <!--
            <Button
                android:id="@+id/add"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_selector"
                android:text="Add Products" />
            <Button
                android:id="@+id/stock"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_selector"
                android:text="Enter Stock" />
            -->

            <Button
                android:id="@+id/viewmystock"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_selector"
                android:text="View My Stocks" />

            <Button
                android:id="@+id/viewcom"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_selector"
                android:text="View Competitor Info" />

            <Button
                android:id="@+id/viewsales"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_selector"
                android:text="View Personal Sales" />

            <Button
                android:id="@+id/mission"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_selector"
                android:text="Allocate Monthly Targets" />

            <Button
                android:id="@+id/viewmymission"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_selector"
                android:text="View Allocated Monthly Targets" />

            <Button
                android:id="@+id/specialmission"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_selector"
                android:text="Allocate Special Targets" />

            <Button
                android:id="@+id/viewmyspecialmission"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_selector"
                android:text="View Allocated Special Targets" />
            
            <!--
            <Button
                android:id="@+id/message_send"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_selector"
                android:text="Send Messages" />

            <Button
                android:id="@+id/message"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_selector"
                android:text="View Messages" />
            -->

            <Button
                android:id="@+id/month"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_selector"
                android:text="Check Monthly Targets Process" />

            <Button
                android:id="@+id/sspecial"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_selector"
                android:text="Check Special Targets Process" />
                
            <!--
            <Button
                android:id="@+id/chart"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_selector"
                android:text="View Sale Trends" />
            -->
            
            <Button
                android:id="@+id/checkin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_selector"
                android:text="Clock In" />

            <Button
                android:id="@+id/checkout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_selector"
                android:text="Clock Out" />

            <Button
                android:id="@+id/change"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_selector"
                android:text="Change Password" />

            <Button
                android:id="@+id/logout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_selector"
                android:text="Sign Out" />

            <Button
                android:id="@+id/settings"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_selector"
                android:text="Settings" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>