<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical" >

    <Button
        android:id="@+id/regresh"
        android:layout_marginLeft="5dp"
         android:layout_marginRight="5dp"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/button_selector"
        android:text="Refresh the list" />
       <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_marginTop="6dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/preference_single_item">

    <Spinner
        android:id="@+id/sptype"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <Spinner
        android:id="@+id/spmodel"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" >
    </Spinner>

    <Spinner
        android:id="@+id/mstuff"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp" >
    </Spinner>
</LinearLayout>	
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_marginTop="5dp"
        android:background="@drawable/preference_single_item"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical" >

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/vmfrom"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:background="@drawable/button_selector"
                    android:text="From the date:" />

                <TextView
                    android:id="@+id/vmd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From the day:"
                    android:textColor="@color/blue"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:paddingTop="5dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/vmto"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:background="@drawable/button_selector"
                    android:text="To the Date :" />

                <TextView
                    android:id="@+id/vmt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="To the day:"
                    android:textColor="@color/blue"
                    android:textSize="18sp" />
            </TableRow>
        </LinearLayout>
        
        </LinearLayout>	
    

        <include
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/views_mission_list" />

</LinearLayout>