<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/regresh"
        android:layout_marginTop="4dp"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
         android:layout_marginRight="5dp"
        android:background="@drawable/button_selector"
        android:text="Refresh the list" />
         <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/preference_single_item">

    <Spinner
        android:id="@+id/sptype"
        android:layout_width="fill_parent"
        android:layout_height="44dp" />

    <Spinner
        android:id="@+id/spmodel"
        android:layout_width="fill_parent"
        android:layout_height="44dp" >
    </Spinner>

    <Spinner
        android:id="@+id/mstuff"
        android:layout_width="fill_parent"
        android:layout_marginBottom="4dp"
        android:layout_height="44dp">
    </Spinner>
 </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/preference_single_item"
        android:orientation="vertical" >

       

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/vmfro"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:background="@drawable/button_selector"
                    android:text="From the Date:" />

                <TextView
                    android:id="@+id/vmd"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="From the day:"
                    android:textColor="@color/blue"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:paddingTop="5dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                  <Button
                android:id="@+id/vmto"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/button_selector"
                android:text="To the Date  :" />
                     <TextView
                android:id="@+id/vmt"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="To the day :"
                android:textColor="@color/blue"
                android:textSize="18sp" />
                  
            </TableRow>
         
          
 </LinearLayout>
        <include
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/views_mission_list" />
    </LinearLayout>

